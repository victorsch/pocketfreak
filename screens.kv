WindowManager:
    MainWindow:
    GobusterWindow:
	NmapWindow:

<MenuButton>:
	size_hint: 0.2, 0.1

<MainWindow>:
    name: "main"
	FloatLayout:
		pos: 0, 0
		size: root.width, root.height
		padding: 20, 20
		GridLayout:
			rows: 2
			Label:
				text: "PocketFreak"
			GridLayout:
				#pos_hint: {'x': .1, 'y': .1}
				size_hint: 1, 1
				cols: 2
				rows: 2
				spacing: 20, 20
				padding: 20, 20
				Button:
					text: "Gobuster"
					size_hint: 0.1, 0.1
					on_release:
						app.root.current = "gobuster"
						root.manager.transition.direction = "left"
				Button:
					text: "Aircrack Suite"
					size_hint: 0.1, 0.1
					on_release:
						app.root.current = "gobuster"
						root.manager.transition.direction = "left"
				Button:
					text: "Metasploit"
					size_hint: 0.1, 0.1
					on_release:
						app.root.current = "gobuster"
						root.manager.transition.direction = "left"
				Button:
					text: "Nmap"
					size_hint: 0.1, 0.1
					on_release:
						app.root.current = "nmap"
						root.manager.transition.direction = "left"



<GobusterWindow>:
    name: "gobuster"
    GridLayout:
        cols: 1

    	Button:
            text: "Go Back"
            on_release:
                app.root.current = "main"
            	root.manager.transition.direction = "right"
		GridLayout:
			cols: 2
			
			Label:
				text: "Host"
			TextInput:
				id: host
				multiline: False
			Label:
				text: "Path to Directory List"
			TextInput:
				id: dirlist
				multiline: False
		GridLayout:
			cols: 1
			Button:
				text: "Submit"
<NmapWindow>:
    name: "nmap"
	host: host
	GridLayout:
		rows: 2
		height: self.minimum_height
		GridLayout:
			size_hint: 0.4, 1
			cols: 1
			rows:4
			spacing: 20, 20
			Label:
				text: "Nmap"

			Button:
				text: "Go Back"
				size_hint: 0.5, 0.7
				size: 200, 100
				on_release:
					app.root.current = "main"
					root.manager.transition.direction = "right"
			GridLayout:
				cols: 2
				rows: 2
				spacing: 10, 10
				Label:
					text: "Host"
				TextInput:
					id: host
					multiline: False
				Label:
					text: "Ports (optional)"
				TextInput:
					id: dirlist
					multiline: False
			GridLayout:
				cols: 1
				Button:
					text: "Submit"
					on_release: root.launch_docker()
		GridLayout:
			rows: 2
			size_hint: 0.6, 1
			Label:
				size_hint: 0.2, 0.2
				text: "Output"
			ScrollView:
				do_scroll_x: False
				do_scroll_y: True
				GridLayout:
					cols: 1
					size_hint_y: None
					height: self.minimum_height
					Label:
						multiline: True
						size_hint: 0.8, 0.8
						text: root.command_output
